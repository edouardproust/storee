{% extends 'default.html.twig' %}

{% set title = "Edit a product" %}

{% block breadcrumbs %}
    {% include "_parts/_breadcrumb.html.twig" with {
        links:{ 
            0:{name:"Admin", url:path("admin")},
            1:{name:"Products", url:path("admin_products")},
            2:{name:"Edit " ~ product.name}
        }
    }%}
{% endblock %}

{% block content %}
    {{ form_start(productForm) }}
        {{ form_errors(productForm) }}
        <div class="row">
            <div class="col">
                {{ form_row(productForm.name) }}
                {{ form_row(productForm.price) }}
                {{ form_row(productForm.shortDescription) }}
            </div>
            <div class="col">
                {% include "_parts/_form-image.html.twig" with { input: productForm.mainImage, img:product.mainImage } %}
                {{ form_row(productForm.category) }}
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Update product</button>
    {{ form_end(productForm) }}
{% endblock %}