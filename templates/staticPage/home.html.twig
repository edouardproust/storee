{% extends "no-title.html.twig" %}

{% set title = "Home" %}

{% block hero_header %}
<div class="home-hero-layers">
    <div class="home-hero-layer" style="opacity:{{ setting('homeHeroLayerOpacity') }}%"></div>
    <div class="home-hero-img page-holder bg-cover py-5" style="background: url({{ settingImage('homeHero') }}); background-position: {{ setting('homeHeroPosition') }};" ></div>
    <div class="home-hero-text">
        <div class="home-hero-text-sub container">
            <h1>Let Everyone Know Your <b>Storee</b>.</h1>
            <p class="lead my-5">Lorem ipsum, dolor sit amet consectetur adipisicing elit. Accusamus architecto temporibus reprehenderit numquam esse, sunt saepe consequuntur neque cumque adipisci aperiam voluptatem ipsam debitis culpa iusto aliquid. Iste, recusandae fugit!</p>
            <a href="{{ path('catalog') }}" class="btn btn-lg btn-outline-light">Browse products</a>
        </div>
    </div>
</div>
{% endblock %}

{% block content %}

    {% if lastProducts is not empty %}
        <section>
            <h2>New products</h2>
            <div class="row g-4 mb-4">
                {% for p in lastProducts %}
                    <div class="col-md-{{ itemColWidth }}">
                        {% include "_parts/_product-card.html.twig" with { product: p } %}
                    </div>
                {% endfor %}
            </div>
        </section>
    {% endif %}
    {% if popularProducts is not empty %}
        <section>
            <h2>Popular products</h2>
            <div class="row g-4">
                {% for p in popularProducts %}
                    <div class="col-md-{{ itemColWidth }}">
                        {% include "_parts/_product-card.html.twig" with { product: p } %}
                    </div>
                {% endfor %}
            </div>
        </section>
    {% endif %}
    <section>
        <h2>Why choose us?</h2>
        {% include "_parts/_icon-cards.html.twig" with {
            style: {"bg": "primary", "text": "white"},
            cards: {
                1: { icon: "fas fa-check", content: "Money back guarantee" }, 
                2: { icon: "fa fa-truck", content: "Fast delivery" },
                3: { icon: "fa fa-leaf", content: "Green products" },
                4: { icon: "fa fa-smile", content: "Happy clients" }
            }
        } %}
    </section>
{% endblock %}